@model TheRideYourRent.Models.Car

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Car Number: </dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CarNo)</dd>
        <dt class="col-sm-2">Car Make: </dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Make.Description)</dd>
        <dt class="col-sm-2">Model: </dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Model)</dd>
        <dt class="col-sm-2">Body Type: </dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BodyType.Description)</dd>
        <dt class="col-sm-2">Kilometres Travelled: </dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.KilometresTravelled)</dd>
        <dt class="col-sm-2">Service Kilometres: </dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ServiceKilometres)</dd>
        <dt class="col-sm-2">Available: </dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Available)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CarId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

